    <div id="rightSideBar" style="float:left;width:200px;height:200px;margin:5px">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Top list</h3>
            </div>
            <div class="list-group">
                @foreach (var topQuiz in Model.TopQuizzes)
                {
                    @Html.ActionLink(@topQuiz.Name, "Details", new { id = topQuiz.ID }, new { @class = "list-group-item" })
