@model ExpressQuiz.ViewModels.QuizzesViewModel
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
<div style="min-width: 1000px">

    <br />

    <div id="leftSideBar" style="float:left;width:15%; margin:5px">
        @Html.Partial("_QuizCategoriesPartial", Model.QuizCategories)
    </div>
    <div id="content" style="float:left;width:60%;margin:5px">

        @using (Ajax.BeginForm("GetQuizzes", "Quizzes", new AjaxOptions()
        {
            UpdateTargetId = "quizList",
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace
        }))
        {
            @Html.HiddenFor(m=>m.SelectedCategory)
            @Html.TextBox("searchTerm", null, new { @class = "form-control" , placeholder="search here" })
             <br />
            <div class="form-group">
                @Html.EnumDropDownListFor(m => m.Filter, htmlAttributes: new { @class = "form-control input-sm col-md-2", id = "filterList" })
                <div class="col-md-2">
                    <input type="submit" value="Sort" class="btn btn-primary btn-sm" />
                </div>
            </div>

          <br />
        }

        <br/>
            @Html.ActionLink("Create New", "Create", "Quizzes", htmlAttributes: new { @class = "btn btn-default btn-sm btn-block" })
     
            <div id="quizList" class="list-group">
                @Html.Partial("_QuizListPartial", Model.Quizzes)

            </div>

        </div>
    <div id="rightSideBar" style="float:left;width:15%;height:200px;margin:5px">
        @Html.Partial("_TopListPartial", Model.TopQuizzes)
    </div>
</div>

