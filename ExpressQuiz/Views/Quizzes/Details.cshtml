@model ExpressQuiz.ViewModels.QuizDetailsViewModel

@{
    <h2>
        @Model.Quiz.Name  (@Model.Quiz.Questions.Count questions)</h2>
    }
<div>
      
    <hr />
        
        
    <div class=" text-center">@Html.ActionLink("Start quiz", "Index", "ActiveQuiz", new { id = Model.Quiz.Id }, new { @class = "btn btn-lg btn-success" })</div>

        
        <br/>
       
    <dl class="dl-horizontal">
        @*<dt>
                @Html.DisplayNameFor(model => model.Quiz.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quiz.Name)
            </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.Quiz.Summary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quiz.Summary)
        </dd>

        @*<dt>
                Questions
            </dt>
            <dd>
               
                @Model.Quiz.Questions.Count
            </dd>*@
            <br/>
        <dt>
            @Html.DisplayNameFor(model => model.AvgTime)
        </dt>
        <dd>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @Model.AvgTimePercent%;">
                    @Model.AvgTime seconds
                </div>
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AvgLevel)
        </dt>
        <dd>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:  @Model.AvgLevel%;">
                    @Model.AvgLevel
                </div>
            </div>
        </dd>
            
        <dt>
            @Html.DisplayNameFor(model => model.AvgRating)
        </dt>
        <dd>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:  @Model.AvgRating%;">
                    @Model.AvgRating
                </div>
            </div>
        </dd>
            
        <dt>
            @Html.DisplayNameFor(model => model.AvgScore)
        </dt>
        <dd>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:  @Model.AvgScore%;">
                    @Model.AvgScore%
                </div>
            </div>
        </dd>
            
          
            
          
    </dl>
        
    
        

      
</div>

@if (!Model.Quiz.Locked || Model.Quiz.CreatedBy == User.Identity.Name)
{
    <div>@Html.ActionLink("Edit", "Edit", new { id = Model.Quiz.Id }, new { @class = "btn btn-primary btn-sm  col-md-1" })</div>


    <div> @Html.ActionLink("Delete", "Delete", new { id = Model.Quiz.Id }, new { @class = "btn btn-danger btn-sm  col-md-1" })</div>
}
<br/>

<div>
  
    
   
    @Html.Action("Index", "Users",new { quizId = @Model.Quiz.Id})
</div>
