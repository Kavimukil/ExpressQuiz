@model IEnumerable<ExpressQuiz.Models.Quiz> 

<h3>My quizzes</h3>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Questions</th>
            <th>Locked</th>

        </tr>
    </thead>

    <tbody>

        @{

            foreach (var q in Model.ToList())
            {

                <tr @(q.Locked ? "class=danger" : "")>
                    <td>@Html.ActionLink(@q.Name, "Details", "Quizzes", new { id = q.Id }, htmlAttributes: new { @class = "" })</td>
                    <td>@q.Questions.Count</td>
                    <td>@q.Locked</td>
                </tr>

            }
        }


    </tbody>
</table>