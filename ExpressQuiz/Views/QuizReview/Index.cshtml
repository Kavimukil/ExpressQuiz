@model ExpressQuiz.ViewModels.QuizReviewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>
        Your score is: @Model.Result.Score/100
    </h3>
    <h3>
        Your time is: @Model.Result.EllapsedTime seconds
    </h3>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Question</th>
                <th>Correctly answered</th>

            </tr>
        </thead>

        <tbody>

            @{
                int count = 0;
                foreach (var q in Model.Items)
                {
                    count++;
                    <tr>
                        <td>@Html.ActionLink(@count.ToString(), "Question", new { questionId = q.QuestionId, resultId = Model.Result.Id })</td>

                        <td>@q.QuestionText</td>
                        <td>@q.IsCorrectAnswer</td>
                    </tr>

                }
            }


        </tbody>
    </table>

</div>

<div class="text-center">
    <button type="button" onclick="rate()" class="btn btn-default">Exit quiz</button>
</div>


<div id="rateQuiz" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Your opinion</h4>
            </div>

            @using (Html.BeginForm())
            {
                <div class="modal-body">

                    <div class="form-horizontal">
                      
                    
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        @Html.HiddenFor(model => model.QuizId)


                        <div class="form-group">
                            @Html.Label("How much did you like it?", htmlAttributes: new { @class = "col-md-4" })
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ok" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

<script>

    $(function () {
        // Handler for .ready() called.
    });

    function rate() {
        $("#rateQuiz").modal("show");
    }
</script>