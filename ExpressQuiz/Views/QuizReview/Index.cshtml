@model ExpressQuiz.ViewModels.QuizReviewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>
        Your score is: @Model.GetScore()
    </h3>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Question</th>
                <th>Correctly answered</th>

            </tr>
        </thead>

        <tbody>

            @{
                int count = 0;
                foreach (var q in Model.GetQuestionDetails())
                {
                    count++;
                    <tr>
                        <td>@Html.ActionLink(@count.ToString(), "Question", new { questionId = q.QuestionId, resultId = Model.Result.Id })</td>
         
                        <td>@q.QuestionText</td>
                        <td>@q.IsCorrectAnswer</td>
                    </tr>
                    
                }
            }


        </tbody>
    </table>

</div>
@Html.ActionLink("Done", "Index", "Quizzes", null, new { @class = "btn btn-success" })