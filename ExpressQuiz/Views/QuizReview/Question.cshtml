@model ExpressQuiz.ViewModels.QuestionReviewViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery.bootpag.min.js"></script>
<script src="~/Scripts/expressquiz/main.js"></script>

<div>


    @Html.ActionLink("Back to List", "Index", new { id = @Model.QuizResultId })
</div>
<div>

  
    <div id="page-selection"></div>
    <div id="content">

        <h4>Question</h4>
        <p style="white-space: pre" >
            @Model.Question.Text 
        </p>

        <h4>Answers</h4>
        <p>
            <div id="answers" class="col-lg-10">
                @{
                    foreach(var a in Model.Question.Answers)
                    {
                        <div class="radio" >
                            <label>
                                @{
                                    if (a.IsCorrect)
                                    {
                                        <input type="radio" checked name="optionsRadios" disabled />
                                    }
                                    else
                                    {
                                        <input type="radio" name="optionsRadios" disabled />
                                    }
                                }
                                @a.Text
                            </label>
                        </div>
                        <div style="color: green">
                            @a.Explanation
                        </div>
                    }
                }
            </div>
        </p>

    </div>

    <br />



</div>

<br/>

